{
  "name": "DryCat",
  "version": "0.2.0",
  "scripts": {
    "types": "npx ttsc --declaration",
    "build:code": "ttsc",
    "build:assets": "npx copyfiles -a -u 1 -e \"./src/**/*.ts\" \"./src/**/*\" dist",
    "build:ui": "node dist/ui-compiler.js",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "rm -rf ./dist && npm run build:assets && npm run build && electron ./dist/main.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.4",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "copyfiles": "^2.4.0",
    "electron": "^11.0.3",
    "eslint": "^7.14.0",
    "fs-extra": "^9.0.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.2",
    "ts-morph": "^9.1.0"
  },
  "dependencies": {
    "electron-store": "^6.0.1"
  }
}
